# --- Database Connection ---
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/liff_db?schema=public"

# --- Server Configuration ---
PORT=3000

# --- LINE LIFF Configuration ---
# Your LIFF ID from LINE Developers Console
LIFF_ID="YOUR_LIFF_ID"
# Same as LIFF_ID, required by Vite to expose to frontend
VITE_LIFF_ID="YOUR_LIFF_ID"

# Optional: For future OAuth implementation if needed
LINE_CHANNEL_ID=""
LINE_CHANNEL_SECRET=""

# --- Security ---
# A 32-byte hex string used for AES-256 encryption.
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="INSERT_YOUR_64_CHAR_HEX_STRING_HERE"
